  "repository": {
    "type": "git",
    "url": "git+https://github.com/np2023v2/nestjs-mongodb.git"
  },
  "bugs": {
    "url": "https://github.com/np2023v2/nestjs-mongodb/issues"
  },
  "homepage": "https://github.com/np2023v2/nestjs-mongodb#readme",
  "keywords": [
    "nestjs",
    "mongodb",
    "mongoose",
    "repository",
    "model",
    "database"
  ],
  "author": "np2023v2",
  "license": "MIT",
  "peerDependencies": {
    "@nestjs/common": "^9.0.0 || ^10.0.0",
    "@nestjs/core": "^9.0.0 || ^10.0.0",
    "@nestjs/mongoose": "^10.0.0 || ^11.0.0",
    "mongoose": "^7.0.0 || ^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^10.0.0",
