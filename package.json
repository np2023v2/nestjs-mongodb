  "description": "NestJS MongoDB module with common models, repositories, and utilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
